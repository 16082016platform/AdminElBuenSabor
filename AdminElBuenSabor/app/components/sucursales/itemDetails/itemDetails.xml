                <Label row="1" text="Radio" cssClass="label" />

                <Label col="1" row="1" text="{{ radio }}" cssClass="label" textWrap="true" />

                <!-- radio content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- additional view content -->


        </StackLayout>
    </GridLayout>
</Page>