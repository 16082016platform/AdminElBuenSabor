<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatedTo="onNavigatedTo" loaded="pageLoaded">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="Edit" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>


        <StackLayout row="1">


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Nombre" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ nombre }}" />

                <!-- nombre content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Dirección" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ direccion }}" />

                <!-- direccion content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="Activo" cssClass="label" col="0" row="1" />

                <Switch col="1" row="1" checked="{{ activo }}" />
                <!-- activo content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Horario" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ horario }}" />

                <!-- horario content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Celular" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ celular }}" />

                <!-- celular content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Teléfono" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ telefono }}" />

                <!-- telefono content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Serie" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ serie }}" />

                <!-- serie content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Radio" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ radio }}" />

                <!-- radio content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Imagen" cssClass="label" col="1" row="0" />

                <Image src="{{ imagenimagen }}" row="1" col="0" stretch="aspectFit" cssClass="image-field alignment-center" />

                <!-- imagen content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- editableListForm3 additional fields -->


        </StackLayout>
        <!-- additional view content -->

    </GridLayout>
</Page>