<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" loaded="pageLoaded">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="Add" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>


        <StackLayout row="1">


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Nombre" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ nombrePlatoAdd }}" />

                <!-- nombrePlatoAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Ingredientes" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ ingredientesAdd }}" />

                <!-- ingredientesAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="PrecioAdd" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ precioAdd }}" />

                <!-- precioAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Etiqueta" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ etiquetaAdd }}" />

                <!-- etiquetaAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Categoria" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ categoriaAdd }}" />

                <!-- categoriaAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Tipo" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ tipo }}" />

                <!-- tipo content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Dias" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ diasAdd }}" />

                <!-- diasAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Personalizar" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ personalizacionAdd }}" />

                <!-- personalizacionAdd content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- editableListForm33 additional fields -->


        </StackLayout>
        <!-- additional view content -->

    </GridLayout>
</Page>