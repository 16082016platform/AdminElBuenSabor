<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" navigatedTo="onNavigatedTo" loaded="pageLoaded">
    <GridLayout rows="auto, *">
        <GridLayout rows="auto, *" cssClass="page-header">
            <GridLayout cssClass="action-bar" columns="auto, *, auto">
                <Button text="Cancel" onTap="onCancelTap" />
                <Label col="1" text="Edit" cssClass="action-bar-title" />
                <Button col="2" text="Save" onTap="onSaveTap" />
            </GridLayout>
            <!-- Workaround for one sided border -->
            <StackLayout row="1" cssClass="action-bar-border" height="1"></StackLayout>
        </GridLayout>


        <StackLayout row="1">


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Nombre" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ nombrePlatoEdit }}" />

                <!-- nombrePlatoEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Ingredientes" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ ingredientesEdit }}" />

                <!-- ingredientesEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Categoria" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ categoriaEdit }}" />

                <!-- categoriaEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Tipo" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ tipoEdit }}" />

                <!-- tipoEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Edit" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ precioEdit }}" />

                <!-- precioEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label text="activo" cssClass="label" col="0" row="1" />

                <Switch col="1" row="1" checked="{{ activoEdit }}" />
                <!-- activoEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Dias" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ diasEdit }}" />

                <!-- diasEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="Personalizar" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ personalizacionEdit }}" />

                <!-- personalizacionEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*" rows="auto, auto" cssClass="form-item">


                <Label text="imagenEdit" cssClass="label" col="1" row="0" />


                <TextField col="1" row="1" text="{{ imagenEdit }}" />

                <!-- imagenEdit content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- editableListForm40 additional fields -->


        </StackLayout>
        <!-- additional view content -->

    </GridLayout>
</Page>