<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <GridLayout rows="auto, *">
        <GridLayout rows="auto" columns="*, *">

            <widgets:button text="Edit" tap="onEditItemTap" />


        </GridLayout>
        <StackLayout row="1">

            <Image width="100" height="100" src="{{ foto }}" />

            <Label text="Detaille plato" />

            <Label text="{{ nombre }}" />


            <TextView text="{{ ingredientes }}" editable="false" />


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Precio" cssClass="label" />

                <Label col="1" row="1" text="{{ precio }}" cssClass="label" textWrap="true" />

                <!-- precioPlato content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Activo" cssClass="label" />

                <Label col="1" row="1" text="{{ activo }}" cssClass="label" textWrap="true" />

                <!-- activoPlato content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Tipo" cssClass="label" />

                <Label col="1" row="1" text="{{ tipo }}" cssClass="label" textWrap="true" />

                <!-- tipo content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Categoria" cssClass="label" />

                <Label col="1" row="1" text="{{ categoria }}" cssClass="label" textWrap="true" />

                <!-- categoria content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="Dias" cssClass="label" />

                <Label col="1" row="1" text="{{ dias }}" cssClass="label" textWrap="true" />

                <!-- dias content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>


            <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item">


                <Label row="1" text="etiqueta" cssClass="label" />

                <Label col="1" row="1" text="{{ etiqueta }}" cssClass="label" textWrap="true" />

                <!-- etiqueta content -->

            </GridLayout>

            <StackLayout cssClass="form-item-border" height="1"></StackLayout>
            <!-- additional view content -->


        </StackLayout>
    </GridLayout>
</Page>